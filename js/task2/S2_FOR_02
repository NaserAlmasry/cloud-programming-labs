// S2_FOR_02 â€” Find first even number

function findFirstEven(nums) {
  for (let n of nums) {
    if (n % 2 === 0) {
      return n;
    }
  }
  return null;
}

// tests
console.log(findFirstEven([1, 3, 5, 8, 9])); // 8
console.log(findFirstEven([1, 3, 5]));       // null
console.log(findFirstEven([]));              // null
