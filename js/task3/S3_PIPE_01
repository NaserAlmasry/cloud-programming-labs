// S3_PIPE_01 — pipe (left-to-right)

const pipe = (...fns) => (value) =>
  fns.reduce((acc, fn) => fn(acc), value);

// tests
const add1 = x => x + 1;
const double = x => x * 2;
const square = x => x * x;

const pipeline = pipe(add1, double, square);

console.log(pipeline(2)); 
// ((2 + 1) * 2)² = 36
